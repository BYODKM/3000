.body
    margin 0
    min-width 320px
    height 100%
    font-family sans-serif
    line-height 1.25
    word-wrap break-word
    -webkit-font-smoothing antialiased
    -webkit-tap-highlight-color rgba(0,0,0,0)
    -webkit-text-size-adjust 100%
    -ms-text-size-adjust 100%
    -webkit-touch-callout none

    pre
        word-wrap normal
