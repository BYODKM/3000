.checkbox
  vertical-align 10%

  &__self
    position relative
    display inline-block
    padding 1px
    width 1em
    height 1em
    overflow hidden
    vertical-align middle

  &__status
    position relative
    top -1px
    left -1px
    z-index 1
    display block
    width 1em
    height 1em
    overflow hidden
    border 1px solid
    border-radius 4px
    vertical-align middle
    background-color white

    &:before
      content "L"
      display block
      margin 0 auto
      width 0.6em
      color white
      font-weight bold
      line-height 0.8
      user-select none
      transform scaleX(-1) rotate(-40deg)

  input
    position absolute
    top 0
    left 0
    z-index 2
    width 1em
    height 1em
    opacity 0
    cursor pointer

    &:checked + span
      background-color black

  span.label &
    pointer-events none
