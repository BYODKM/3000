.radio
  position relative

  span
    position relative
    display inline-block
    width 0.7em
    height 0.7em
    overflow hidden
    border 1px solid
    border-radius 0.7em

  input
    position absolute
    opacity 0
    cursor pointer

    &:checked + span
      background-color gray

      &:before
        content ""
        position absolute
        top 0.2em
        left 0.2em
        display block
        width 0.3em
        height 0.3em
        overflow hidden
        border-radius 0.3em
        background-color white
