.radio

  &__self
    position relative
    display inline-block
    width 1em
    height 1em
    overflow hidden
    border 1px solid
    border-radius 1em
    vertical-align bottom
    background-color white

  &__status
    display block
    box-sizing border-box
    width 1em
    height 1em
    overflow hidden
    border 3px solid white
    border-radius 1em

  input
    position absolute
    top 0
    left 0
    opacity 0
    cursor pointer
    transform scale(1.1)

    &:checked + span
      background-color black
