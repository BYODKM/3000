mixin heading

    if (attributes.level)
        - var level = attributes.level - 1
        - attributes.level = null

    - headingCounter = level || headingCounter || 0
    - headingCounter += 1

    if (headingCounter > 6)
        - headingCounter = 6

    - headingTag = 'h' + headingCounter

    #{headingTag}&attributes(attributes).heading
        block
